@model List<bai3.Models.SanPham>
@{
    ViewBag.Title = "Tìm kiếm Sản phẩm";
}

<h2>TÌM KIẾM SẢN PHẨM</h2>

@using (Html.BeginForm("TimKiem", "SanPham", FormMethod.Get, new { @class = "form-inline" }))
{
    <div class="form-group">
        <input type="text" name="TuKhoa" class="form-control" value="@ViewBag.TuKhoa" placeholder="Nhập tên sản phẩm..." />
    </div>
    <button type="submit" class="btn btn-primary">SEARCH</button>
}

<hr />

@if (Model != null && Model.Count > 0)
{
    <h4>Tổng số sản phẩm tìm thấy: @Model.Count</h4>
    <table class="table">
        <tr>
            <th>HÌNH SP</th>
            <th>MaSP</th>
            <th>Tên SP</th>
            <th>Giá</th>
            <th>Mô Tả</th>
            <th>MaLoai</th>
        </tr>                                                                     
        @foreach (var item in Model)
        {
            <tr>
                <td><img src="~/Images/@item.DuongDan" alt="@item.TenSP" style="width:80px; height:50px;" /></td>
                <td>@item.MaSP</td>
                <td>@item.TenSP</td>
                <td>@item.Gia.ToString("N0")</td>
                <td>@item.MoTa</td>
                <td>@item.MaLoai</td>
            </tr>
        }
    </table>
}
else if (!string.IsNullOrEmpty(ViewBag.TuKhoa))
{
    <p>Không tìm thấy sản phẩm nào khớp với từ khóa "@ViewBag.TuKhoa".</p>
}